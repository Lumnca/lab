    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            //单选题
            $('.layout-shooseOnlyOne').on('click',
                'a',
                null,
                function (jqEvent) {
                    jqEvent.preventDefault();
                    var id = $(this).attr('data-item-choices');
                    var $index = $(this).attr('data-index');
                    LoadSingle(id, $index);
                });

            $('.layout-shooseNotOnlyOne').on('click',
                'a',
                null,
                function (jqEvent) {
                    jqEvent.preventDefault();
                    var id = $(this).attr('data-item-choices');
                    var $index = $(this).attr('data-index');
                    LoadMultiple(id, $index);
                });

            $('.layout-panduanTimu').on('click',
                'a',
                null,
                function (jqEvent) {
                    jqEvent.preventDefault();
                    var id = $(this).attr('data-item-choices');
                    var $index = $(this).attr('data-index');
                    LoadJudge(id, $index);
                });

            function LoadSingle(id, _index) {
                $.ajax({
                    url: "/Student/LoadSingle",
                    type: "post",
                    dataType: "json",
                    data: {
                        eSid: id
                    },
                    success: function (json, textStatus, jqXhr) {
                        
                        if (json.isOk) {
                            json.index = _index;
                            var template = $('#labSingle-content-template').html();
                            Mustache.parse(template);
                            var result = Mustache.render(template, json);
                            $('.labOnlyOneShoose').html(result);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            }

            function LoadMultiple(id, _index) {
                $.ajax({
                    url: "/Student/LoadMultiple",
                    type: "post",
                    dataType: "json",
                    data: {
                        eMid: id
                    },
                    success: function (json, textStatus, jqXhr) {
                        
                        if (json.isOk) {
                            json.index = _index;
                            var template = $('#labMultiple-content-template').html();
                            Mustache.parse(template);
                            var result = Mustache.render(template, json);
                            $('.labMoreShoose').html(result);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            }

            function LoadJudge(id, _index) {
                $.ajax({
                    url: "/Student/LoadJudge",
                    type: "post",
                    dataType: "json",
                    data: {
                        eJid: id
                    },
                    success: function (json, textStatus, jqXhr) {
                        
                        if (json.isOk) {
                            json.index = _index;
                            var template = $('#labJudge-content-template').html();
                            Mustache.parse(template);
                            var result = Mustache.render(template, json);
                            $('.labjudgementAnt').html(result);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            }

            if ($('.layout-shooseOnlyOne a').length > 0) {
                var id = $('.layout-shooseOnlyOne a:first').attr('data-item-choices');
                var $index = $('.layout-shooseOnlyOne a:first').attr('data-index');
