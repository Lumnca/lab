            }

            if ($('.layout-shooseNotOnlyOne a').length > 0) {
                var id = $('.layout-shooseNotOnlyOne a:first').attr('data-item-choices');
                var $index = $('.layout-shooseNotOnlyOne a:first').attr('data-index');
                LoadMultiple(id, $index);
            }

            if ($('.layout-panduanTimu a').length > 0) {
                var id = $('.layout-panduanTimu a:first').attr('data-item-choices');
                var $index = $('.layout-panduanTimu a:first').attr('data-index');
                LoadJudge(id, $index);
            }
            /* 判断题 */
            $('.labjudgementAnt').on('click', '.preview', null, function(je) {
                var index = window.parseInt($('.labjudgementAnt .submit').attr('data-index'));
                if (index > 1) {
                    index -= 1;
                    LoadJudge($(`.layout-panduanTimu a:eq(${index - 1})`).attr("data-item-choices"), index);
                }
            });

            $('.labjudgementAnt').on('click', '.next', null, function(je) {
                var index = window.parseInt($('.labjudgementAnt .submit').attr('data-index'));
                if (index < window.parseInt($('.layout-panduanTimu a').length)){
                    index += 1;
                    LoadJudge($(`.layout-panduanTimu a:eq(${index - 1})`).attr("data-item-choices"), index);
                }
            });
            /*判断答案*/
            $('.labjudgementAnt').on('click', '.submit', null, function (jq) {
                var eId = $(this).attr('data-item-choices');
                
                var answer = $('.labjudgementAnt input:checked').val();
                if (!answer) {
                    onMask("提示", "请填写答案！");
                    return;
                }

                $.ajax({
                    url: "/Student/SubmitJudge",
                    type: "post",
                    dataType: "json",
                    data: {
                        examId: eId,
                        answer: answer
                    },
                    success: function (json, textStatus, jqXhr) {
                      
                        if (json.isOk) {
                            if (!$(`.layout-panduanTimu [data-item-choices="${eId}"]`).hasClass("val-active")) {
                                $(`.layout-panduanTimu [data-item-choices="${eId}"]`).addClass("val-active");
                            }
                            $('.labjudgementAnt .answer').text(`你的答案:${answer}`);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            });
            /* 多选题 */
            $('.labMoreShoose').on('click', '.preview', null, function(je) {
                var index = window.parseInt($('.labMoreShoose .submit').attr('data-index'));
                if (index > 1) {
                    index -= 1;
                    LoadMultiple($(`.layout-shooseNotOnlyOne a:eq(${index -1 })`).attr("data-item-choices"), index);
                }
            });

            $('.labMoreShoose').on('click', '.next', null, function(je) {
                var index = window.parseInt($('.labMoreShoose .submit').attr('data-index'));
                if (index < window.parseInt($('.layout-shooseNotOnlyOne a').length)){
                    index += 1;
                    LoadMultiple($(`.layout-shooseNotOnlyOne a:eq(${index - 1})`).attr("data-item-choices"), index);
                }
            });
            /*多选题答案*/
            $('.labMoreShoose').on('click', '.submit', null, function (jq) {
                var eId = $(this).attr('data-item-choices');
                var answer = "";
                $('.labMoreShoose input[name="option"]').each(function () {
                    var val = $(this).prop('checked');
                    var optionName = $(this).attr('value');
                    if (val) {
                        answer += optionName;
                    }
                });
                if (!answer) {
                    onMask("提示", "请填写答案！");
                    return;
                }

                $.ajax({
                    url: "/Student/SubmitMultiple",
                    type: "post",
                    dataType: "json",
                    data: {
                        examId: eId,
                        answer: answer
                    },
                    success: function (json, textStatus, jqXhr) {
                        console.log(json);
                        if (json.isOk) {
                            if (!$(`.layout-shooseNotOnlyOne [data-item-choices="${eId}"]`).hasClass("val-active")) {
                                $(`.layout-shooseNotOnlyOne [data-item-choices="${eId}"]`).addClass("val-active");
                            }
                            $('.labMoreShoose .answer').text(`你的答案:${answer}`);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
                
            });


            /* 单选题*/
            $('.labOnlyOneShoose').on('click', '.preview', null, function(jq) {
                var index = window.parseInt($('.labOnlyOneShoose .submit').attr('data-index'));
                if (index > 1) {
                    index -= 1;
                    LoadSingle($(`.layout-shooseOnlyOne a:eq(${index - 1})`).attr("data-item-choices"), index);
                }
            });

            $('.labOnlyOneShoose').on('click', '.next', null, function (jq) {
                var index = window.parseInt($('.labOnlyOneShoose .submit').attr('data-index'));
                if (index < window.parseInt($('.layout-shooseOnlyOne a').length)) {
                    index += 1;
                    LoadSingle($(`.layout-shooseOnlyOne a:eq(${index - 1})`).attr("data-item-choices"), index);
                }
            });

            /** 提交 单选题 */
            $('.labOnlyOneShoose').on('click', '.submit', null, function (jq) {
                var eId = $(this).attr('data-item-choices');
                var answer = $('.labOnlyOneShoose input:checked').val();
                if (!answer) {
                    onMask("提示", "请填写答案！");
                    return;
                }

                $.ajax({
                    url: "/Student/SubmitSingle",
                    type: "post",
                    dataType: "json",
                    data: {
                        examId: eId,
                        answer: answer
                    },
                    success: function (json, textStatus, jqXhr) {
                        if (json.isOk) {
                            if (!$(`.layout-shooseOnlyOne [data-item-choices="${eId}"]`).hasClass("val-active")) {
                                $(`.layout-shooseOnlyOne [data-item-choices="${eId}"]`).addClass("val-active");
                            }
                            $('.labOnlyOneShoose .answer').text(`你的答案:${answer}`);
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            });

            /* 总结提交 */
            $('button[data-val-p]').click(function(jqEvent) {
                var pId = $(this).attr('data-val-p');
                var answer = $('textarea').val();
                if (answer === "") {
                    onMask("提示", "答案为空");
                    return;
                }
                if (answer.length > 240) {
                    onMask("提示", "回答字数请勿超过240字！");
                    return;
                }
                $.ajax({
                    url: "/Student/Review",
                    type: "post",
                    dataType: "json",
                    data: {
                        pId: pId,
                        review: answer
                    },
                    success: function (json, textStatus, jqXhr) {
                        if (json.isOk) {
                            onMask("提示","万分感谢你的回答！");
                        } else {
                            onMask(json.title, json.message);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            });

            var memoryPId = @Model.PaperId;
            
            window.setInterval(function () {
                var left = window.parseInt($('#leftTimeMinutes').text());
                $('#leftTimeMinutes').text(left - 1);
                $.ajax({
                    url: "/Student/Timer",
                    type: "post",
                    dataType: "json",
                    data: {
                        pId: memoryPId
                    },
                    success: function (json, textStatus, jqXhr) {
                        console.log(json);
                        if (json.isPaperIdError) {
                            onMask(json.title, json.message);
                        } else {
                            if (window.parseInt(json.leftTime) === 0) {
                                $('#close-exam').modal('show');
                                window.location = `/Student/Result?pId=${memoryPId}`;
                            }
                            if (json.isFinish) {
                                $('#close-exam').modal('show');
                                window.location = `/Student/Result?pId=${memoryPId}`;
                            } else {
                                $('#leftTimeMinutes').text(json.leftTime);
                            }
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        onMask("错误", "网络接连错误..");
                    }
                });
            }, 60000);

            $('button[data-submit-id]').click(function (jqEvent) {
                if ($('.layout-panduanTimu a').length > $('.layout-panduanTimu .val-active').length) {
                    onMask("提示", "判断题做完了吗？");
                    return;
                }

                if ($('.layout-shooseNotOnlyOne a').length > $('.layout-shooseNotOnlyOne .val-active').length) {
                    onMask("提示", "多选题做完了吗？");
                    return;
                }

                if ($('.layout-shooseOnlyOne a').length > $('.layout-shooseOnlyOne .val-active').length) {
                    onMask("提示", "单选题题做完了吗？");
                    return;
                }

                if ($('textarea').val() == "" ) {
                    onMask("提示", "请填写以下反馈信息！");
                    return;
                }

                $('#program').modal('show');
                var pId = parseInt($(this).attr('data-submit-id'));
                if (pId != memoryPId) {
                    $.ajax({
                        url: "/Student/SubmitPaper",
                        type: "post",
                        dataType: "json",
                        data: {
                            pId: memoryPId
                        },
                        success: function (json, textStatus, jqXhr) {
                            if (json.isOk) {
                                window.location.href = `/Student/Result?pId=${memoryPId}`;
                            } else {
                                onMask(json.title, json.message);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            onMask("错误", "网络接连错误..");
                        }
                    });
                } else {
                    $.ajax({
                        url: "/Student/SubmitPaper",
                        type: "post",
                        dataType: "json",
                        data: {
                            pId: pId
                        },
                        success: function (json, textStatus, jqXhr) {
                            if (json.isOk) {
                                window.location.href = `/Student/Result?pId=${pId}`;
                            } else {
                                onMask(json.title, json.message);
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            onMask("错误", "网络接连错误..");
                        }
                    });
                }
                
            });
        })
    </script>
