@model IEnumerable<LabExam.Models.Entities.Progress>

<table class="table table-striped">
    <thead>
    <tr>
        <th>编号</th>
        <th>名称</th>
        <th>进度</th>
        <th>已学时间</th>
        <th>要求时间</th>
    </tr>
    </thead>
    <tbody>
    @{
        int index = 1;
    }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label class=" label label-primary ">
                    @(index++)
                </label>
            </td>
            <td>
                @item.Resource.Name
            </td>
            <td width=200px>
                @{
                    float v = item.StudyTime / item.NeedTime * 100;
                }
                <div class="progress progress-striped active">
                    <div class="progress-bar progress-bar-info" role="progressbar"
                         aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: @(v)%;">
                        @(v)%
                        <span class="sr-only"> @(v)% 完成（信息）</span>
                    </div>
                </div>
            </td>
            <td>
                @(item.StudyTime)分钟
            </td>
            <td>
                @(item.NeedTime)分钟
            </td>
        </tr>
    }
    </tbody>
</table>
